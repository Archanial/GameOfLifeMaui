<?xml version="1.0" encoding="utf-8" ?>
<views:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      xmlns:views="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
      x:Class="GameOfLifeMaui.ViewModels.Popups.FractalPopup">
       
      <Grid class="Popup"
            ColumnSpacing="0"
            WidthRequest="400"
            HeightRequest="400"
            Padding="10, 10, 10, 10">
            <Grid.RowDefinitions>
                   <RowDefinition Height="*"/>
                   <RowDefinition Height="*"/>
                   <RowDefinition Height="*"/>
                   <RowDefinition Height="*"/>
                   <RowDefinition Height="*"/>
                   <RowDefinition Height="*"/>
                   <RowDefinition Height="*"/>
                   <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label 
                   class="Popup"
                   Text="Draw fractal"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"/>
            <Label Grid.Row="1"
                   class="Popup"
                   Text="Width"
                   FontSize="16"
                   HorizontalOptions="Start"
                   VerticalOptions="Center">
            </Label>
            <Entry Grid.Row="2"
                   class="Popup"
                   x:Name="Width"
                   HorizontalOptions="Fill"
                   VerticalOptions="Center"
                   Completed="ConfirmButtonClicked"
                   Keyboard="Numeric"/>
            <Label Grid.Row="3"
                   class="Popup"
                   Text="Height"
                   FontSize="16"
                   HorizontalOptions="Start"
                   VerticalOptions="Center">
            </Label>
            <Entry Grid.Row="4"
                   class="Popup"
                   x:Name="Height"
                   HorizontalOptions="Fill"
                   VerticalOptions="Center"
                   Completed="ConfirmButtonClicked"
                   Keyboard="Numeric"/>
            <Label Grid.Row="5"
                   class="Popup"
                   Text="Iterations"
                   FontSize="16"
                   HorizontalOptions="Start"
                   VerticalOptions="Center">
            </Label>
            <Entry Grid.Row="6"
                   class="Popup"
                   x:Name="Iterations"
                   HorizontalOptions="Fill"
                   VerticalOptions="Center"
                   Completed="ConfirmButtonClicked"
                   Keyboard="Numeric"/>
            <Grid Grid.Row="7"
                  HorizontalOptions="End">
                   <Grid.ColumnDefinitions>
                          <ColumnDefinition Width="auto"/>
                          <ColumnDefinition Width="auto"/>
                   </Grid.ColumnDefinitions>
                   <Button 
                          Grid.Column="0"
                          class="Popup"
                          Text="Cancel"
                          Clicked="CancelButtonClicked"/>
                   <Button 
                          Grid.Column="1"
                          class="Popup"
                          Text="Confirm"
                          Clicked="ConfirmButtonClicked"/>
            </Grid>
      </Grid>
      
</views:Popup>
